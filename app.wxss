/**app.wxss**/
.container{
    padding-bottom: 130rpx;
}
.col-red{
  color: #f76160;
}
.col-green{
  color: #09ba07;
}
.col-blue{
  color: #0faeff;
}
.clear-both::after{
    content: '';
    display: block;
    clear: both;
}
.tabbar{
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
    width: 100%;
    height: 110rpx;
    box-shadow: 0 0 5px rgba(0,0,0,.1);
    z-index: 999;
}
.tabbar .tab{
    position: relative;
    float: left;
    width: 33.3%;
    height:100%;
}
.tabbar .tab image{
    display: block;
    height: 48rpx;
    width: 48rpx;
    margin: 10rpx auto;
}
.tabbar .tab text{
    display: block;
    line-height: 40rpx;
    text-align: center;
    font-size: 24rpx;
    color: #666;
}
.authorize{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    z-index: 9999;
}
/* 130rpx #ef5056*/
.topbar{
    position: fixed;
    top: 0;
    left: 0;
    height: 100rpx;
    width: 100%;
    padding-top: 30rpx;
    line-height: 100rpx;
    text-align: center;
    background: #ef5056;
    color: #fff;
    font-size: 28rpx;
    z-index: 99999;
}
.topbar .home-icon{
    position: absolute;
    left: 20rpx;
    top: 60rpx;
    width: 40rpx;
    height: 40rpx;
}