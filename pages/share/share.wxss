/* pages/share/share.wxss */
.container{
    padding-bottom: 100rpx;
}
.bg{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}
.qrcode-top{
    margin-top: 60rpx;
    text-align: center;
}
.qrcode-top image{
    width: 140rpx;
    height: 140rpx;
    background: #fff;
    border-radius: 50%;
}
.qrcode-top text{
    display: block;
    margin-top: 20rpx;
    color: #fff;
    font-size: 32rpx;
}
.tips{
    display: block;
    width: 100%;
    margin:40rpx 0;
    text-align: center;
    font-size: 32rpx;
    color: #ffffcc;
}
.block{
    width: 700rpx;
    margin: 0 auto;
    background: #fff;
    border-radius: 10rpx;
    overflow: hidden;
}
.block .banner{
    position: relative;
    margin-bottom: 10rpx;
}
.block .banner image{
    width: 100%;
    height: 350rpx;
}
.block .banner .zanzhu{
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    background: #fff;
    padding: 4rpx 20rpx;
    border-radius: 6rpx;
    font-size: 28rpx;
    color: #ff6633;
}
.block .title{
    display: flex;
    justify-content: space-between;
    align-items:flex-start;
    padding: 0 20rpx;
    font-size: 32rpx;
    color: #333;
}
.block .title .title-txt{
    line-height: 48rpx;
}
.block .title .danbao{
    display: flex;
    align-items: center;
    padding-top: 6rpx;
    padding-left:40rpx;
}
.block .title .danbao image{
    height: 26rpx;
    width: 26rpx;
}
.block .title .danbao text{
    white-space: nowrap;
    padding-left: 4rpx;
    font-size: 28rpx;
    color: #ff6633;
}
.block .condition{
    display: flex;
    justify-content: space-between;
    align-items:flex-start;
    padding: 20rpx;
    font-size: 28rpx;
    color: #666;
}
.qrcode-bottom{
    padding: 60rpx 0;
    text-align: center;
}
.qrcode-bottom image{
    width: 300rpx;
    height: 300rpx;
    background: #fff;
    border-radius: 50%;
}
.savebtn{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    color: #fff;
    font-size: 28rpx;
    background: #666;
}