/* pages/choujiang_xiangqing/choujiang_xiangqing.wxss */
page{
    background: #f3f3f3;
}
canvas{
    position: fixed;
    top: -2000rpx;
    left: 0;
    width: 250px;
    height: 200px;
}
.topbox{
    background: #fff;
}
.topbox .banner{
    position: relative;
    margin-bottom: 10rpx;
}
.topbox .banner image{
    width: 750rpx;
    height: 350rpx;
}
.topbox .banner .zanzhu{
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    background: #000;
    padding: 6rpx 20rpx;
    border-radius: 4rpx;
    font-size: 28rpx;
    color: #fff;
    opacity: .7;
}
.topbox .title{
    display: flex;
    justify-content: space-between;
    align-items:flex-start;
    padding: 0 20rpx;
    font-size: 32rpx;
    color: #333;
}
.topbox .title .title-txt{
    line-height: 48rpx;
}
.topbox .title .danbao{
    display: flex;
    align-items: center;
    padding-top: 6rpx;
}
.topbox .title .danbao image{
    height: 26rpx;
    width: 26rpx;
}
.topbox .title .danbao text{
    white-space: nowrap;
    padding-left: 4rpx;
    font-size: 28rpx;
    color: #ff6633;
}
.topbox .condition{
    padding: 10rpx 20rpx 20rpx;
    font-size: 24rpx;
    color: #666;
}
.topbox .condition text{
    display: block;
}
.faqiren{
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 30rpx;
    height: 100rpx;
    padding: 0 20rpx;
    background: #fff;
    border-top: 1rpx solid #eee;
    color: #333;
}
.faqiren view{
    display: flex;
    align-items: center;
}
.faqiren image{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    margin-right: 10rpx;
}
.faqiren view text{
    max-width: 400rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.guanggao{
    margin-top: 20rpx;
    background: #fff;
    padding: 30rpx;
    font-size: 28rpx;
    color: #666;
    background: #fdf6e6;
    border-top: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
}
.mainbox{
    padding: 20rpx;
    background: #fff;
    margin: 20rpx 0;
}
.mainbox .info{
    font-size: 28rpx;
    color: #333;
    margin-top: 10rpx;
}
.mainbox .info text{
    color: #666;
}
.mainbox .mycodes text{
    float: left;
    width: 170rpx;
    height: 48rpx;
    line-height: 48rpx;
    margin-top: 20rpx;
    margin-right: 10rpx;
    white-space: nowrap;
}
.mainbox .mycodes .code-item{
    width: 164rpx;
    text-align: center;
    border-radius: 4rpx;
    background: #f3f3f3;
    font-size: 24rpx;
}
.mainbox .canyu-btn{
    position: relative;
    width: 200rpx;
    height: 200rpx;
    margin: 40rpx auto 20rpx;
    color: #fff;
}
.mainbox .canyu-btn image{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}
.mainbox .canyu-btn button{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    line-height: 200rpx;
    padding: 0;
    background-color: transparent;
    color: #fff;
    font-size: 32rpx;
    border: none;
    z-index: 1;
}
.mainbox .canyu-btn button::after{
    border: none;
}
.mainbox .canyu-tips{
    margin-bottom: 20rpx;
    font-size: 28rpx;
    text-align: center;
    color: #999;
}
.mainbox .canyu-tips text{
    display: block;
    padding: 6rpx 0;
}
.mainbox .canyu-text{
    margin-bottom: 20rpx;
    text-align: center;
    font-size: 28rpx;
    line-height: 60rpx;
    color: #999;
}
.mainbox .friends{
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 40rpx 0 20rpx;
}
.mainbox .friends image{
    width: 60rpx;
    height: 60rpx;
    margin: 0 20rpx;
    border-radius: 50%;
}
.mainbox .canyu-info{
    position: relative;
    text-align: center;
    font-size: 28rpx;
    color: #999;
    display: flex;
    justify-content: center;
    padding-left: 106rpx;
}
.mainbox .canyu-info .lianjie{
    /* position: absolute;
    right: 0;
    top: 0; */
    display: flex;
    align-items: center;
    color: #006699;
    padding-left: 20rpx;
}
.mainbox .canyu-info .lianjie image{
    width: 30rpx;
    height: 30rpx;
}
.mainbox .canyu-users{
    margin-top: 30rpx;
    padding: 0 75rpx;
}
.mainbox .headimg{
    display: inline-block;
    width: 12.5%;
    margin-bottom: 20rpx;
}
.mainbox .headimg image{
    display: block;
    margin: 0 auto;
    width: 50rpx;
    height: 50rpx;
}
/* .jianjie{
    padding: 20rpx;
    background: #fff;
} */
.jianjie text{
    display: block;
    font-size: 28rpx;
    color: #666;
    margin-bottom: 20rpx;
}
.jianjie image{
    display: block;
    width: 100%;
}
.jubao{
    color: #666;
    text-align: center;
    line-height: 80rpx;
    font-size: 28rpx;
}
.bottombox{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 80rpx;
    padding: 10rpx 0;
    background: #fff;
    box-shadow: 0 0 20rpx rgba(0,0,0,.1);
    font-size: 28rpx;
    z-index: 999;
}
.bottombox .share{
    float: left;
    height: 80rpx;
    width: 300rpx;
    line-height: 80rpx;
    margin-left: 50rpx;
    text-align: center;
    background: #ef5056;
    color: #fff;
    border-radius: 6rpx;
}
.bottombox .getmore{
    float: left;
    height: 80rpx;
    width: 300rpx;
    line-height: 76rpx;
    margin-left: 50rpx;
    text-align: center;
    box-sizing: border-box;
    border: 2rpx solid #ff6633;
    color: #ff6633;
    border-radius: 6rpx;
}
.bg{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9998;
    background: rgba(0,0,0,.5);
}
.action-sheet{
    position: fixed;
    top: 100%;
    left: 0;
    width: 100%;
    height: 322rpx;
    background: #fff;
    z-index: 9999;
    transition: all 0.2s linear;
}
.action-sheet-item{
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 32rpx;
    border-bottom: 1rpx solid #eee;
}
.action-sheet-item button{
    background: #fff;
    border: none;
    line-height: 100rpx;
    font-size: 32rpx;
}
.action-sheet-item button::after{
    border: none;
}
.action-sheet-cancle{
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 32rpx;
    border-top: 20rpx solid #f3f3f3;
}